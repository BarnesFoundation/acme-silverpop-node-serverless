{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false, 
    "moduleResolution": "node", 
    "baseUrl": "src", 
    "paths": {
      "app/*": [
        "app/*"
      ],
      "@classes/*": [
        "app/classes/*"
      ],
      "@interfaces/*": [
        "app/interfaces/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }, 
    "rootDirs": [
      "dist/"
    ], 
    "esModuleInterop": true
  }
}